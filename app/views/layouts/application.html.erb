<!DOCTYPE html>
<html>
  <head>
    <title>OdinProjectKittens</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="flex column align-center gap-10">
    <% if flash.any? %>
      <div class="flash">
        <% flash.each do |type, msg| %>
          <p class="<%= type %>"><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <nav class="flex gap-20">
      <%= link_to 'Home', root_path %>
      <%= link_to 'Create Kitten', new_kitten_path %>
    </nav>

    <%= yield %>
  </body>
</html>
